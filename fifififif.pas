program AvgMainDiagonal;  { Оголошення програми з назвою AvgMainDiagonal }

var
  A: array[1..10, 1..10] of integer;  { Оголошення квадратного масиву 10x10 цілих чисел }
  i, j, n: integer;                  { Змінні для циклів та розміру масиву }
  sum: integer;                       { Змінна для суми елементів головної діагоналі }
  avg: real;                          { Змінна для середнього арифметичного }

begin
  write('Введіть розмір квадратного масиву n (1..10): ');  { Виводимо підказку для користувача }
  readln(n);                                                { Зчитуємо розмір масиву }

  if (n < 1) or (n > 10) then                               { Перевіряємо, чи n у допустимому діапазоні }
  begin
    writeln('Помилка: розмір масиву має бути від 1 до 10.');  { Якщо ні — виводимо повідомлення про помилку }
    exit;                                                    { Завершуємо програму }
  end;

  writeln('Введіть елементи масиву:');                      { Підказка для введення елементів масиву }
  for i := 1 to n do                                        { Зовнішній цикл по рядках }
    for j := 1 to n do                                      { Внутрішній цикл по стовпцях }
      read(A[i, j]);                                        { Зчитуємо кожен елемент масиву }

  sum := 0;                                                  { Ініціалізуємо суму головної діагоналі нулем }

  { Обчислення суми елементів головної діагоналі }
  for i := 1 to n do                                        { Цикл по головній діагоналі }
    sum := sum + A[i, i];                                    { Додаємо елемент A[i,i] до суми }

  avg := sum / n;                                            { Обчислюємо середнє арифметичне діагоналі }

  writeln('Середнє арифметичне головної діагоналі = ', avg:0:2);  { Виводимо результат з двома знаками після коми }
end.
